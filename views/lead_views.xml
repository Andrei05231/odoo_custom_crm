<odoo>
    <record id="crm_lead_form_add_contact_ids" model="ir.ui.view">
        <field name="name">crm.lead.form.add-contact-ids</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//group[@name='lead_partner']" position="before">
                <group name="contact_info">
                    <field name="contact_ids" 
                        widget="many2many_tags_avatar" 
                        domain="[('is_company','=',True)]"/>
                    <field name="designer_ids" 
                        widget="many2many_tags_avatar" 
                        domain='[("is_company", "=", False)]'/>
                    <field name="sub_contractant_ids" 
                        widget="many2many_tags_avatar"/>
                </group>
            </xpath>

            <!-- Add new tab in the notebook -->
            <xpath expr="//notebook" position="inside">
                <page string="Contact Summary" name="contact_summary">
                    <group>
                        <field name="all_contacts_display" nolabel="1">
                            <list create="false" delete="false" edit="false">
                                <field name="contact_type" string="Type"/>
                                <field name="name" string="Name"/>
                                <field name="email" string="Email"/>
                                <field name="phone" string="Phone"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>

            <xpath expr="//group[@name='lead_partner']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group[@name='opportunity_partner']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='email_from']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//field[@name='phone']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

        </field>
    </record>
</odoo>